    },
    {
      "type": "header",
      "content": "t:sections.full_img.settings.first_image_text_header"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "t:global.colors.text",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "title",
      "label": "t:global.text.title"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "t:global.text.button_text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "t:global.text.button_link"
    },
    {
      "type": "header",
      "content": "t:sections.full_img.settings.second_image_text_header"
    },
    {
      "type": "color",
      "id": "text_color_2",
      "label": "t:global.colors.text",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "title_2",
      "label": "t:global.text.title"
    },
    {
      "type": "text",
      "id": "button_text_2",
      "label": "t:global.text.button_text"
    },
    {
      "type": "url",
      "id": "button_url_2",
      "label": "t:global.text.button_link"
