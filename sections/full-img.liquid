    {
      "type": "header",
      "content": "t:sections.full_img.settings.layout_header"
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "t:sections.full_img.settings.margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "t:sections.full_img.settings.padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "t:sections.full_img.name"
    }
  ]
}
{% endschema %}
