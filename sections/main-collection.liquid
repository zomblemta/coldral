<style>
  #shopify-section-{{ section.id }} {
    --product-list-horizontal-spacing-factor: {{ section.settings.horizontal_spacing_factor }};
    --product-list-vertical-spacing-factor: {{ section.settings.vertical_spacing_factor }};

    {% comment %}On mobile, c’est simple! Pas de sidebar{% endcomment %}
    --collection-items-per-row-medium: 2;
    --collection-items-per-row-large: 1;
  }

  #shopify-section-{{ section.id }} .product-list {
    --product-list-max-items-per-row-allowed: 99 !important; {% comment %}On collection page, we explicitly set a number of items so we don't want this{% endcomment %}
  }

  @media screen and (min-width: 700px) {
    #shopify-section-{{ section.id }} {
      {% comment %}Sur tablette, pas de sidebar{% endcomment %}
      --collection-items-per-row-compact: 4;
      --collection-items-per-row-medium: 3;
      --collection-items-per-row-large: 2;
    }
  }

  @media screen and (min-width: 1000px) {
    #shopify-section-{{ section.id }} {
      {%- comment -%}À partir de 1000px, on peut ou non avoir la sidebar{%- endcomment -%}

      {%- if section.settings.filter_layout == 'sidebar' and show_filters -%}
        --collection-items-per-row-compact: 4;
        --collection-items-per-row-medium: 3;
        --collection-items-per-row-large: 2;
      {%- else -%}
        --collection-items-per-row-compact: 6;
        --collection-items-per-row-medium: 4;
        --collection-items-per-row-large: 3;
      {%- endif -%}
    }

    #shopify-section-{{ section.id }} .collection {
      {%- if section.settings.filter_layout == 'sidebar' and show_filters -%}
        --collection-grid-template: var(--collection-sidebar-width, 0) minmax(0,1fr);
      {%- endif -%}
    }
  }

  @media screen and (min-width: 1400px) {
    #shopify-section-{{ section.id }} {
      {%- comment -%}À partir de 1400px on peut charger un peu plus en sidebar{%- endcomment -%}

      {%- if section.settings.filter_layout == 'sidebar' and show_filters -%}
        --collection-items-per-row-compact: 6;
        --collection-items-per-row-medium: 4;
        --collection-items-per-row-large: 3;
      {%- endif -%}
    }
  }

  /* --- Mise en page custom de ta grille --- */

  /* Décaler la grille sous le hero */
  #shopify-section-{{ section.id }} .collection {
    margin-top: -5rem;
  }

  /* Container full-width pour cette section uniquement */
  #shopify-section-{{ section.id }} .container {
    max-width: 100%;
    padding: 0;
    margin: 0;
  }

  /* Grille produits : 2 colonnes mobile */
  #shopify-section-{{ section.id }} .product-list {

    width: 100%;
    margin: 0 auto;
  }

  #shopify-section-{{ section.id }} .product-card {
    width: 100%;
  }

  /* Overlay produit blanc + tailles de titres */
  #shopify-section-{{ section.id }} .product-card__overlay {
    background-color: #ffffff;
  }

  #shopify-section-{{ section.id }} .product-card__overlay-title {
    font-size: 0.5rem; /* ≈ 8px */
  }

  @media screen and (min-width: 768px) {
    /* 3 colonnes desktop */


    #shopify-section-{{ section.id }} .product-card__overlay-title {
      font-size: 1rem; /* ≈ 16px */
    }
  }

  /* Optionnel : enlever les icônes sur les cartes produits seulement,
     pour ne pas casser les icônes des filtres / pagination / etc. */
  #shopify-section-{{ section.id }} .product-card svg {
    /* display: none; */
  }
</style>

